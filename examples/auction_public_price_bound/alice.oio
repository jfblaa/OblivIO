ALICE

channel AUCTIONHOUSE/BID_ALICE@{} : (int@{}*int@{H})@{};

var public_max_bid : int@{} = 500;
var secret_max_bid : int@{H} = 432;

AUCTION_STATUS@{} (status : (string@{H}*int@{})@{}) {
    send(AUCTIONHOUSE/BID_ALICE, (snd status <= public_max_bid, fst status != "Alice" and snd status <= secret_max_bid));
}

AUCTION_OVER@{} (winner : (string@{H}*int@{H})@{}) {
    print("Auction won by", fst winner);
    print("Winning bid was", snd winner);
    exit();
}
