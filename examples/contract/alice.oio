{Alice}

declare int<size_offer> salary_offer := 100@{Bob};
declare string<size_contract> contract := "contract details"@{Bob};

init send({Bob},"OFFER",salary_offer);



hn ({Bob},"ACCEPT",int<m> x) {
  print("Bob accepted, sending contract!");
  send({Bob},"CONTRACT",contract);
}

hn ({Bob},"DECLINE",int<m> x) {
  print("Bob declined!");
}
