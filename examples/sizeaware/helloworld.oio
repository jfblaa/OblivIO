{Greeter}

declare hello := "Hello"<hello_size>@{};



hn ({Alice},"PING",x<m>) {
  if m >= hello_size
  then {
      obliv if x = "Hello"
      then send({Alice},"PONG",x ^ " World!");
      else send({Alice},"PONG","Incorrect input received!");
  } else {
      send({Alice},"PONG","Incorrect input received!");
  }
}