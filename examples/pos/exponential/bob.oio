BOB

channel ALICE/A1@{H} : int@{H} [BOB/B1: 2; ALICE/A2: 4; BOB/B2: 8];

channel ALICE/A2@{H} : int@{H} [BOB/B2: 2];

var bobs_secret : int@{H} = 0;

START@{} (i : int@{}) [ALICE/A1: 1; BOB/B1: 2; ALICE/A2: 4; BOB/B2: 8] {
    send(ALICE/A1, bobs_secret);
}

B1@{H} (secret : int@{H}) [ALICE/A2: 2; BOB/B2: 4] {
    oblif secret
    then send(ALICE/A2, secret+1);
    else send(ALICE/A2, secret-1);
}

B2@{H} (secret : int@{H}) {
    print("BOB/B2 received secret", secret);
}
