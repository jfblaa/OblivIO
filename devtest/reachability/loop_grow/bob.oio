BOB

channel ALICE/A1@{H} [ALICE/A1;BOB/B1;ALICE/A2;BOB/B2] : int@{H};
channel ALICE/A2@{H} [ALICE/A2;BOB/B2] : int@{H};

var bobs_secret : int@{H} = 0;

START@{} [ALICE/A1;BOB/B1;ALICE/A2;BOB/B2] (i : int@{}) {
    send(ALICE/A1, bobs_secret);
}

B1@{H} [ALICE/A1;BOB/B1;ALICE/A2;BOB/B2] (secret : int@{H}) {
    oblif 0
    then send(ALICE/A1, secret);
    else skip;
}

B2@{H} [ALICE/A2;BOB/B2] (secret : int@{H}) {
    print("BOB/B2 received", secret);
    send(ALICE/A2, secret);
}
