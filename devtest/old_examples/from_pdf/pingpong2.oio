Alice

variable string@{Alice} test := "Hello";
variable string@{Alice} reply := "";

variable obliv string@{Alice} msg := ?"";
variable obliv string@{Alice} reply1 := ?"";
variable obliv string@{Alice} reply2 := ?"";

channel string@{Alice} PONG;

string@{Alice} PING(msg) {
    skip;
} {
    obliv if !msg = test
    then reply1 := ?("Hello");
    else reply2 := ?("BAD");
    
    reply ?= reply1;
    reply ?= reply2;
    
    output PONG(reply);
}
