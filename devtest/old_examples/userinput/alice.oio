Alice

channel string@{Alice} BOB_MSG;
channel string@{Alice,Bob} SCREEN;

variable obliv string@{Alice} in := ?"Hello";
variable obliv string@{Bob} msg := ?"";

string@{Alice} INPUT(in) {
    skip;
} {
    output BOB_MSG(!in);
}

string@{Bob} ALICE_MSG(msg) {
    skip;
} {
    output SCREEN(!msg);
}
